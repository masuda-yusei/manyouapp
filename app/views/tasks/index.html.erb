<h1>タスク一覧</h1>
<p><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.created_at %></td>
      <td><%= link_to 'Show', task_path(task.id) %></td>
      <td><%= link_to "Edit", edit_task_path(task.id), data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規タスク投稿', new_task_path %>