<p><%= notice %></p>
<h2>ユーザ一覧</h2>

<table>
<br>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>管理者権限</th>
      <th>タスク数</th>
    </tr>
  </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.admin %></td>
          <td><%= user.tasks.count %></td>
          <td><%= link_to 'Show', admin_user_path(user), class:"btn btn-primary mr-3" %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-success mr-3" %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mr-3" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>
<br>
